<h1>HERITOr</h1>
<h3></h3>
<div class=“world”>
  <p><%= @world.name %></p>
  <p><%= image_tag @world.image_url, size: "250x200" if @world.image? %></p>
  <p><%= @world.created_at %></p>
    <% if user_signed_in? %>
    <% if current_user.already_liked?(@world) %>
      <%= link_to world_like_path(@world), method: :delete do %>
        <i class=“fas fa-heart”></i><%= @world.likes.count %>
      <% end %>
    <% else %>
      <%= link_to world_likes_path(@world), method: :post do %>
        <i class=“far fa-heart”></i><%= @world.likes.count %>
      <% end %>
    <% end %>
  <% else %>
    <i class=“far fa-heart”></i><%= @world.likes.count %>
  <% end %>
  <i class="far fa-heart"></i><%= @world.likes.count %>
  </div>

</div>
<h2>いいねしたユーザー</h2>
<ul>
  <% @world.liked_users.each do |user| %>
    <li><%= user.email %></li>
  <% end %>
</ul>
<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@world, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>





