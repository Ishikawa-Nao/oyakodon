<%= stylesheet_link_tag 'top', :media => "all" %>

<%= image_tag "fujisan_top.jpg", class:"fujisan"  %>

<div class="sekai">

  <h3>いいねランキング</h3>
  <% @rank_worlds.each do |t| %>

    <%= t.name %>
      <%= t.genre %>
      <%= t.area %>
      <%= image_tag t.image_url, size: "250x200" if t.image? %>

      <% if user_signed_in? %>
      <% if current_user.already_liked?(t) %>
          <%= link_to world_like_path(id: t.id, world_id: t.id), method: :delete do %>  
              <i class="fas fa-heart"></i><%= t.likes.count %>
          <% end %>
      <% else %>
          <%= link_to world_likes_path(id: t.id, world_id: t.id), method: :post do %>                
              <i class="far fa-heart"></i><%= t.likes.count %>
          <% end %>
      <% end %>
  <% else %>   
  <% end %>

      <br>
    <% end %>

</div>
</div>

